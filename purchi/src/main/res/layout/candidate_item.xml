<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/item_candidate.xml -->
<androidx.cardview.widget.CardView
    android:id="@+id/cardView"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:padding="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/panel1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/red"
                android:id="@+id/textConstituency"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="NA-1"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"
                android:textSize="14dp"/>

            <TextView
                android:layout_marginEnd="4dp"
                android:textColor="@color/blue"
                android:id="@+id/textLocation"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textName"
                android:layout_toEndOf="@+id/imageView"
                android:text="Location"
                android:textSize="12dp"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/whats"
                android:src="@drawable/whats"
                android:layout_width="48dp"
                android:layout_height="48dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/panel1"
            android:id="@+id/panel2"
            android:layout_marginEnd="4dp"
            android:orientation="vertical"
            android:layout_width="130dp"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/red"
                android:id="@+id/textNameUrdu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imageView"
                android:text="Candidate Name"
                android:textSize="14dp"
                android:textStyle="bold"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imageView"
                android:text="Candidate Name"
                android:textSize="12dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:layout_toRightOf="@+id/panel2"
            android:layout_alignParentRight="true"
            android:id="@+id/panel3"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:padding="16dp"
                android:background="@drawable/round_rectangle"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textColor="@color/red"
                android:id="@+id/form45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textName"
                android:layout_toEndOf="@+id/imageView"
                android:text="Form 45"
                android:textSize="12dp"/>

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
